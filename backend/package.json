{
  "name": "k33p-backend-server",
  "version": "1.0.0",
  "description": "K33P Backend Server with Smart Contract Integration",
  "main": "dist/k33p-backend-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && node fix-imports.js",
    "start": "node dist/index.js",
    "dev": "ts-node --esm k33p-backend-server.ts",
    "dev:watch": "nodemon --exec ts-node --esm k33p-backend-server.ts",
    "test": "npm run build && npm start",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "npm run build",
    "db:init": "ts-node --esm src/database/init.ts",
    "db:migrate": "ts-node --esm src/database/migrate.ts",
    "db:reset": "ts-node --esm src/database/reset.ts"
  },
  "keywords": [
    "cardano",
    "smart-contract",
    "k33p",
    "blockchain",
    "backend",
    "api",
    "express"
  ],
  "author": "K33P Team",
  "license": "MIT",
  "dependencies": {
    "@blockfrost/blockfrost-js": "^6.0.0",
    "@peculiar/webcrypto": "1.4.6",
    "@types/node": "^20.17.55",
    "axios": "1.10.0",
    "bech32": "2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "lucid-cardano": "^0.10.11",
    "morgan": "1.10.0",
    "multer": "2.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "7.0.5",
    "pg": "^8.11.3",
    "webcrypto-core": "1.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/multer": "2.0.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0 <=22.14.0"
  }
}
